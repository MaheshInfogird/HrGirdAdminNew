<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/WhiteTextColor</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/WhiteTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#FFF</item>
        
    </style>

    <style name="TextAppearance.App.TextInputLayoutRed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/RedTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">#FFF</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <!--Switch Button Style-->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3498db</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#000000</item>


        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#000000</item>
    </style>
    <!--Switch Button Style-->

</resources>
