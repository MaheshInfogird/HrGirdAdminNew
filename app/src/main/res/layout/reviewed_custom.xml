<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/WhiteBgColor"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_revwed_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mayur B Shinde"
            android:textSize="11sp"
            android:paddingRight="3dp"
            android:textColor="@color/GreyTextColor"/>

        <TextView
            android:id="@+id/txt_revwed_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-04-08"
            android:textSize="11sp"
            android:paddingRight="2dp"
            android:paddingLeft="3dp"
            android:textColor="@color/GreyTextColor"/>

        <TextView
            android:id="@+id/txt_revwed_designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:text="Manager"
            android:textColor="@color/GreyTextColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_revwed_appId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:visibility="gone"
            android:textColor="@color/GreyTextColor"/>

        <TextView
            android:id="@+id/txt_revwed_leaveid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:visibility="gone"
            android:textColor="@color/GreyTextColor"/>

        <TextView
            android:id="@+id/txt_revwed_uId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:visibility="gone"
            android:textColor="@color/GreyTextColor"/>

        <TextView
            android:id="@+id/txt_revwed_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:visibility="gone"
            android:textColor="@color/GreyTextColor"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <!--View Icon-->
            <LinearLayout
                android:id="@+id/layout_revwed_apr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/view_icon"
                    android:textSize="12sp"
                    android:text="Leave"
                    android:textColor="@color/LandingPageBg"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
            <!--View Icon-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>